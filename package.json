{
  "name": "marstech-hr-be",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "npx tsx watch server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "knex migrate:latest",
    "migrate:up": "knex migrate:up",
    "migrate:make": "npx knex migrate:make",
    "migrate:rollback": "knex migrate:rollback --all",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "marstech-internship",
  "license": "ISC",
  "description": "HR Management System (HRMS) backend for Marstech, built with TypeScript, Express, Knex, and secure authentication (JWT/Bcrypt).",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "jose": "^6.0.8",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.12.0",
    "zod": "^3.25.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.15.0",
    "jiti": "^2.6.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.46.2"
  }
}
